@model IEnumerable<ProLab.Areas.HockeyData.Models.DataModels.HockeySeries>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HockeySeriesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HockeySeriesShortDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HockeySeriesDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HockeySeriesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HockeySeriesShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HockeySeriesDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameTime)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
